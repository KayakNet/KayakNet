<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Node Info Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NODE INFO"
            android:textColor="@color/neon_green"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Node ID:"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/nodeIdValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="---"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Version:"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/versionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v0.1.14"
                        android:textColor="@color/neon_green"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Peers:"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/peerCountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Anonymous:"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/anonymousValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <Button
                    android:id="@+id/copyNodeId"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="COPY NODE ID"
                    android:textColor="@color/neon_green"
                    android:textSize="12sp"
                    android:background="@drawable/button_outline"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textColor="@color/neon_green"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/changeNickname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Change Nickname"
            android:textColor="@color/text_primary"
            android:textAllCaps="false"
            android:background="@drawable/button_dark"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/changeBootstrap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Change Bootstrap Node"
            android:textColor="@color/text_primary"
            android:textAllCaps="false"
            android:background="@drawable/button_dark"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/reconnect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Reconnect to Network"
            android:textColor="@color/neon_green"
            android:textAllCaps="false"
            android:background="@drawable/button_dark"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/viewEscrows"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="View My Escrows"
            android:textColor="@color/text_primary"
            android:textAllCaps="false"
            android:background="@drawable/button_dark"
            android:layout_marginBottom="24dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp" />

        <!-- About -->
        <Button
            android:id="@+id/aboutApp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="About KayakNet"
            android:textColor="@color/text_secondary"
            android:textAllCaps="false"
            android:background="@drawable/button_dark"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp" />

    </LinearLayout>
</ScrollView>

